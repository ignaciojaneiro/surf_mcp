# Surf MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Required: Windy Point Forecast API Key
# Get yours at https://api.windy.com/keys
WINDY_API_KEY=your_windy_api_key_here

# Optional: Windy API URL (default shown)
WINDY_API_URL=https://api.windy.com/api/point-forecast/v2

# Optional: HTTP settings
HTTP_TIMEOUT=30
MAX_RETRIES=3

# Optional: Server settings
PORT=8000
LOG_LEVEL=INFO

# Optional: Environment (development/production)
ENVIRONMENT=development

# Optional: MCP Transport (http/stdio)
# Use "stdio" for local development with Cursor/Claude Desktop
# Use "http" (default) for Railway deployment
MCP_TRANSPORT=http
